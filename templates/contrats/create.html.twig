{# templates/contrats/create.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un contrat{% endblock %}

{% block body %}
{% if app.user %}
{# Contenu pour les utilisateurs connectés #}


<div class="container border rounded my-5 p-3">
<div class="title text-center">
    <h1>Créer un contrat</h1>
    <hr>
</div>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary my-2">Créer</button>
    {{ form_end(form) }}
    <a href="{{ path('app_contrats') }}" class="btn btn-secondary">Retour à la liste des contrats</a>
</div>



{% else %}
    <div class="container my-5 text-center border rounded p-5 bg-danger">
    <h5>Merci de bien vouloir vous connecté afin d'accéder a cette page</h5>
    </div>
{% endif %}

{% endblock %}
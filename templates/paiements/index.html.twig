{% extends 'base.html.twig' %}

{% block title %}Hello PaiementsController!{% endblock %}

{% block body %}

<div class="container my-4">
    <h1>Gestion des Paiements</h1>
    <hr>
</div>

<div class="container">
        <li class="list-group-item">
            <a href="{{ path('app_paiements_create') }}" class="btn btn-primary">Ajouter un paiement</a>
        </li>
</div>

<div class="container my-3">
<div class="row">
{% for paiement in paiements %}
    <div class="card m-3 p-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Locataire : {{ locataires[paiement.getId()] }}</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Id : {{ paiement.id }} </li>
            <li class="list-group-item">Montant : {{ paiement.montant }} </li>
            <li class="list-group-item">Date : {{ paiement.date|date('Y-m-d') }} </li>
            <li class="list-group-item">Source : {{ paiement.source }} </li>
            <li class="list-group-item">Type : {{ paiement.type ? 'Loyer' : 'Depot de garantie' }} </li>
            <li class="list-group-item">Contrat : {{ paiement.getContratId() }} </li>
        </ul>
        <div class="card-body">

            <div class="row">
            <div class="col-6">
            <a href="{{ path('app_paiements_edit', {'id': paiement.id}) }}" class="btn btn-primary">Modifier</a>
            </div>
            <div class="col-6">           
            <form action="{{ path('app_paiements_delete', {'id': paiement.id}) }}" method="post" onsubmit="return confirm('Etes vous sur ?')">
            <button type="submit" class="btn btn-primary">Supprimer</button>
            </form>
            </div>
            </div>








        </div>
    </div>
{% endfor %}
</div>
</div>

{% endblock %}